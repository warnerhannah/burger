<header>
    <img src="https://openclipart.org/download/257429/Burger.svg" alt="Burger Img">
    <h1>Eat Da Burger!</h1>
</header>

<div id="burgerslist">
    <div id="tobeeaten">
        <h2>Burgers to be Devoured:</h2>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{burger_name}}
            <button class="devour-it" data-id="{{id}}" data-new-eaten="{{devoured}}">Devour it!</button>
            <br>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div id="eaten">
        <h2>Burgers Already in Your Belly:</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{burger_name}},
            <br>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>


<div id="new">
    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>
        <button type="submit">I'm Hungry!</button>
    </form>
</div>